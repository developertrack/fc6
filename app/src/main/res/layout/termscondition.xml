<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:alpha="0.15"
            android:text="WELCOME"
            android:textColor="@color/skyblue"
            android:textSize="60dp" />

        <ImageView
            android:id="@+id/fc6logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/welcomeText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/trademill" />

        <TextView
            android:id="@+id/fc6text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fc6logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="FC6"
            android:textColor="@color/green"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/termsConditionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fc6text"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:text="By tapping 'Agree &amp; Continue' you accept the\"
            android:textSize="14dp" />

        <Button
            android:id="@+id/condition"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/termsConditionText"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/button_bg_rounded_corners"
            android:text="Acc. &amp; Cont."
            android:textAlignment="center"
            android:textColor="@color/white"


            />


        <TextView
            android:id="@+id/txt_push_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/condition"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal"
            android:textColor="@color/colorPrimary"
            android:textSize="26dp"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/txt_reg_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_push_message"

            android:layout_alignParentBottom="true"
            android:visibility="invisible" />


    </RelativeLayout>
</LinearLayout>