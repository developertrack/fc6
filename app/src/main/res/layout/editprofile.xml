<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white">

            <RelativeLayout
                android:id="@+id/layoutfirstclosssign"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/skyblue">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="14dp"
                    android:background="@drawable/closesign"
                    android:onClick="back" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="5dp"
                    android:text="Edit Profile"
                    android:textColor="@color/black"
                    android:textSize="18dp" />


            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/secondlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_below="@+id/layoutfirstclosssign"
                android:background="#FFFF">


                <LinearLayout
                    android:id="@+id/img"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/notificationimage"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="9dp"
                    android:src="@drawable/womancooking"
                    app:civ_border_color="#f5f4f4"
                    app:civ_border_width="2dp" />

                    <TextView
                        android:id="@+id/changePassword"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Change Password"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/skyblue"
                        android:textSize="14sp"/>

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignLeft="@+id/img"
                    android:gravity="center_vertical"
                    android:layout_marginTop="40dp">
                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:text="Gladimir Silvestre"
                        android:textColor="#49d8f9"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:visibility="visible"/>

                    <LinearLayout
                        android:id="@+id/et_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone">
                        <EditText
                            android:id="@+id/et_username"
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:text="Gladimir Silvestre"
                            android:textColor="#49d8f9"
                            android:textStyle="bold"
                            android:visibility="visible"/>

                        <ImageView
                            android:id="@+id/save_name"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="6dp"
                            android:background="@drawable/tick"/>

                    </LinearLayout>
                </LinearLayout>




                <ImageView
                    android:id="@+id/userimage"
                    android:layout_width="135dp"
                    android:layout_height="135dp"
                    android:layout_below="@+id/name"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="90dp"
                    android:layout_marginBottom="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/womancooking" />

                <ImageView
                    android:id="@+id/edit_user_image"
                    android:layout_width="50dp"
                    android:layout_height="20dp"
                    android:layout_below="@+id/name"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="140dp"
                    android:background="@drawable/editimageicon"
                    android:onClick="startImagePicker" />


            </RelativeLayout>

            <View
                android:id="@+id/view3"
                android:layout_width="fill_parent"
                android:layout_above="@+id/secondlayout2"
                android:layout_height="10dp"
                android:layout_marginTop="10dp"
                android:background="#c3c3c6"/>
            <RelativeLayout
                android:id="@+id/secondlayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/secondlayout"
                android:layout_marginTop="10dp"
                android:background="#ffff">


                <ImageView
                    android:id="@+id/mygalary"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/gallary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/mygalary"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="3dp"
                    android:text="Cover Photo"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    android:textStyle="bold"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/secondlayout3"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:layout_below="@+id/secondlayout2"
                android:background="#eeeeee">

                <ImageView
                    android:id="@+id/cover_image"
                    android:layout_width="wrap_content"
                    android:layout_height="150dp"
                    android:layout_centerHorizontal="true"
                    android:src="#7F000000" />


                <ImageView
                    android:id="@+id/edit_cover_image"
                    android:layout_width="60dp"
                    android:layout_height="23dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="120dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/editimageicon"
                    android:onClick="startcoverimgPicker" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/secondlayout3"
                android:background="#ffff"></RelativeLayout>
        </RelativeLayout>

    </LinearLayout>
</ScrollView>