<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

 <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dividerfirst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/secondlayout"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:paddingLeft="60dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_dark" />


    <RelativeLayout
        android:id="@+id/thirdlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:layout_below="@+id/dividerfirst">

        <TextView
            android:id="@+id/calories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:text="1400 Calories"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="start"
            android:layout_marginTop="12dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="12dp"
            android:text="Serving Sizes : 1 Serving"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>


        <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/dividerfirst3"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@color/black"
            android:src="@android:drawable/divider_horizontal_dark" />

    </RelativeLayout>

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dividerfirst2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/thirdlayout"
        android:layout_marginTop="5dp"
        android:background="@color/black"
        android:paddingLeft="60dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_dark" />


    <RelativeLayout
        android:id="@+id/fourthlayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dividerfirst2"
        android:padding="4dp">

        <TextView
            android:id="@+id/one1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:text="Breakfast"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/breakfast"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/one1"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="6dp"
            android:text="English Muffin, Nut Butter,Fruit Salad"
            android:textColor="#9f9c9c"
            android:textSize="16dp" />


    </RelativeLayout>

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dividerfirst4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fourthlayout"
        android:layout_marginTop="5dp"
        android:background="@color/black"
        android:paddingLeft="60dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_dark"
        />


    <RelativeLayout
        android:id="@+id/fourthlayout5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dividerfirst4"
        android:padding="4dp">

        <TextView
            android:id="@+id/one3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:text="Morning Snack"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/snacks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/one3"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="6dp"
            android:text="Cucumber Salad or Tomato Salad"
            android:textColor="#9f9c9c"
            android:textSize="16dp" />


    </RelativeLayout>

    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dividerfirst5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fourthlayout5"
        android:layout_marginTop="5dp"
        android:background="@color/black"
        android:paddingLeft="60dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_dark" />


    <RelativeLayout
        android:id="@+id/fourthlayout6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dividerfirst5"
        android:padding="4dp">

        <TextView
            android:id="@+id/one6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:text="Lunch"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/lunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/one6"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="6dp"
            android:text="Cobb Salad: Green, Tomatoes, Cheese, and Protein"
            android:textColor="#9f9c9c"
            android:textSize="16dp" />


    </RelativeLayout>


    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dividerfirst6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fourthlayout6"
        android:layout_marginTop="5dp"
        android:background="@color/black"
        android:paddingLeft="60dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_dark"

        />


    <RelativeLayout
        android:id="@+id/fourthlayout7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dividerfirst6"
        android:padding="4dp">

        <TextView
            android:id="@+id/one7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:text="Afternoon Snack"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/afternoonsnack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/one7"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="6dp"
            android:text="Popcorn (100 Calorie Bag)"
            android:textColor="#9f9c9c"
            android:textSize="16dp" />


    </RelativeLayout>


    <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/dividerfirst7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fourthlayout7"
        android:layout_marginTop="5dp"
        android:background="@color/black"
        android:paddingLeft="60dp"
        android:scaleType="fitXY"
        android:src="@android:drawable/divider_horizontal_dark" />


    <RelativeLayout
        android:id="@+id/fourthlayout8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dividerfirst7"
        android:padding="4dp">

        <TextView
            android:id="@+id/one9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:text="Dinner"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/dinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/one9"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="6dp"
            android:text="Cashew and Chicken Stir Fry with Asparagus"
            android:textColor="#9f9c9c"
            android:textSize="16dp" />


    </RelativeLayout>



</LinearLayout>
