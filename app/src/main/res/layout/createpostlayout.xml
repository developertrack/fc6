<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <RelativeLayout
                android:id="@+id/layoutfirstclosssign"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/skyblue">


                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="14dp"

                    android:background="@drawable/closesign" />

                <TextView
                    android:id="@+id/teamname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="10dp"
                    android:text="Create Post"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="17dp" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="match_parent"
                android:layout_below="@id/layoutfirstclosssign"

                android:background="#ffffff">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <RelativeLayout
                        android:id="@+id/thought"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/fourthlayout"
                        android:background="#ffff">

                        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/profile_image2"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="7dp"
                            android:src="@drawable/womancooking"
                            app:civ_border_color="#f5f4f4"
                            app:civ_border_width="2dp" />


                        <TextView
                            android:id="@+id/username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="105dp"
                            android:layout_marginTop="10dp"
                            android:singleLine="true"
                            android:text="Gladimir Simeon"
                            android:textColor="@color/skyblue"
                            android:textSize="20dp" />


                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/badgesDetails"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/username"
                            android:layout_marginLeft="90dp"
                            android:layout_marginRight="20dp">
                        </android.support.v7.widget.RecyclerView>


                        <RelativeLayout
                            android:id="@+id/thridlayout"
                            android:layout_width="320dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/profile_image2"
                            android:layout_centerHorizontal="true"
                            android:background="#FFFF">


                       <!--     <ImageView
                                android:id="@+id/rigtarrow"
                                android:layout_width="20dp"
                                android:layout_height="30dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="10dp"
                                android:background="@drawable/leftarrow"
                                android:visibility="gone"
                                />

                            <ImageView
                                android:id="@+id/leftarrow"
                                android:layout_width="20dp"
                                android:layout_height="30dp"
                                android:layout_alignParentStart="true"
                                android:layout_marginStart="0dp"
                                android:layout_marginRight="10dp"
                                android:visibility="gone"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/rightarrow" />
-->



                            <EditText
                                android:id="@+id/thoughtext2"
                                android:layout_width="320dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="60dp"
                                android:layout_centerInParent="true"
                                android:background="@drawable/button_bg_rounded_corner5"
                                android:hint="    Share your comments and photos        "
                                android:padding="10dp"
                                android:cursorVisible="true"
                                android:textCursorDrawable="@color/skyblue"
                                android:textSize="14dp" />


                        </RelativeLayout>


                        <RelativeLayout
                            android:id="@+id/firstlayout2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/thridlayout">

                            <ImageView

                                android:id="@+id/postimage"
                                android:layout_width="match_parent"
                                android:layout_height="220dp"
                                android:background="@drawable/fc6"
                                android:src="#7F000000" />

                                <jp.shts.android.storiesprogressview.StoriesProgressView
                                    android:visibility="visible"
                                    android:id="@+id/stories"
                                    android:layout_width="300dp"
                                    android:layout_height="5dp"
                                    android:layout_centerHorizontal="true"/>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/postimage"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/chooseimage"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:layout_marginStart="0dp"
                                    android:layout_marginTop="130dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="@color/skyblue"
                                    android:gravity="center_horizontal"
                                    android:padding="4dp"
                                    android:layout_margin="2dp"
                                    android:text="Choose Images"
                                    android:textColor="@color/white"
                                    android:textSize="20dp" />

                                <TextView
                                    android:id="@+id/chooseimage_camera"
                                    android:layout_width="fill_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="0dp"
                                    android:layout_marginTop="130dp"
                                    android:layout_marginBottom="5dp"
                                    android:background="@color/skyblue"
                                    android:layout_weight="1"
                                    android:gravity="center_horizontal"
                                    android:layout_margin="2dp"
                                    android:padding="4dp"
                                    android:text="Camera"
                                    android:textColor="@color/white"
                                    android:textSize="20dp" />

                            </LinearLayout>


                        </RelativeLayout>




                        <ImageView
                            android:id="@+id/dividerfirst2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/firstlayout2"
                            android:layout_alignParentRight="true"
                            android:background="#c1c2c2"
                            android:outlineAmbientShadowColor="#c1c2c2"
                            android:scaleType="fitXY"
                            android:src="@android:drawable/divider_horizontal_dark"/>

                        <RelativeLayout
                            android:id="@+id/jjjj"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/dividerfirst2">

                            <TextView
                                android:textSize="16sp"
                                android:textColor="@android:color/white"
                                android:gravity="center"
                                android:id="@+id/mark"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_centerInParent="true"
                                android:onClick="timeline_post"
                                android:background="@drawable/rounded_textview"
                                android:text="Timeline Post" />


                        </RelativeLayout>


                        <ImageView xmlns:android="http://schemas.android.com/apk/res/android"
                            android:id="@+id/dividerfirst3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/jjjj"
                            android:layout_alignParentRight="true"
                            android:background="#c1c2c2"
                            android:outlineAmbientShadowColor="#c1c2c2"
                            android:scaleType="fitXY"
                            android:src="@android:drawable/divider_horizontal_dark"/>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/dividerfirst3"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:gravity="center">

                            <Button
                                android:id="@+id/uploadmeal"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/custom_round_corner_textview"
                                android:onClick="meal_post"
                                android:text="Upload Meal"
                                android:textColor="@color/skyblue" />
                            <Button
                                android:layout_width="170dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="15dp"
                                android:background="@drawable/custom_round_corner_textview"
                                android:onClick="workout_post"
                                android:text="Upload Workout"
                                android:textColor="@color/skyblue"
                                />

                        </LinearLayout>


                    </RelativeLayout>


                </LinearLayout>


            </RelativeLayout>


        </RelativeLayout>
    </LinearLayout>
</ScrollView>