<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/layoutfirstclosssign"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/skyblue"

            >

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/closesign" />

            <TextView
                android:layout_width="343dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"

                android:text="Activity Log"
                android:textColor="@color/black"
                android:textSize="22dp" />


        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/layoutfirstclosssign"
            android:layout_marginTop="10dp">


            <android.support.v7.widget.RecyclerView
                android:id="@+id/activtliylog"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:padding="6dp"
                android:background="#EEEEEE"></android.support.v7.widget.RecyclerView>

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
